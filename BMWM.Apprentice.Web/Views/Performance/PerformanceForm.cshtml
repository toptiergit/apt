        $('#EvaluateFdate').change(() => {

            var dEvaluateFdate = new Date($("#EvaluateFdate").val());
            var dEvaluateTdate = new Date($("#EvaluateTdate").val());
            var nDiff = dEvaluateTdate.getDayOfYear() - dEvaluateFdate.getDayOfYear();
            var sDiff = nDiff.toString();
            $("#ServicesInYear").val(sDiff);
            $("#lbServicesInYear").text("Services in " + dEvaluateFdate.getFullYear() +" (days):");           
        });
        $('#EvaluateTdate').change(() => {

            var dEvaluateFdate = new Date($("#EvaluateFdate").val());
            var dEvaluateTdate = new Date($("#EvaluateTdate").val());
            var nDiff = dEvaluateTdate.getDayOfYear() - dEvaluateFdate.getDayOfYear();
            var sDiff = nDiff.toString();
            $("#ServicesInYear").val(sDiff);
            $("#lbServicesInYear").text("Services in " + dEvaluateFdate.getFullYear() + " (days):"); 
        });
        $('#ATTActworkLeft').change(() => {
            if ($("#ATTActwork").val() != "") {
                var nATTActworkLeft = parseInt($("#ATTActworkLeft").val());
                var nATTActwork = parseInt($("#ATTActwork").val());
                var nATTRate = nATTActworkLeft *( 100/nATTActwork) ;
                $("#ATTRate").val(nATTRate.toFixed(2));
            }
        });
        $('#ATTActwork').change(() => {
            if ($("#ATTActworkLeft").val() != "") {
                var nATTActworkLeft = parseInt($("#ATTActworkLeft").val());
                var nATTActwork = parseInt($("#ATTActwork").val());
                var nATTRate = nATTActworkLeft * (100 / nATTActwork);
                $("#ATTRate").val(nATTRate.toFixed(2));
            }
        });
        $('#ATTTotal').click(() => {

            var nQOJRank = parseInt($('[name="QOJRank"]:checked').val());
            var nQOJARank = parseInt($('[name="QOJARank"]:checked').val());
            var nSTWRank = parseInt($('[name="STWRank"]:checked').val());
            var nWRRank = parseInt($('[name="WRRank"]:checked').val());
            var nTWRank = parseInt($('[name="TWRank"]:checked').val());
            var nPTRank = parseInt($('[name="PTRank"]:checked').val());
            var nATTRank = parseInt($('[name="ATTRank"]:checked').val());
            var nATTTotal = (nQOJRank ? nQOJRank : 0 )+ (nQOJARank ? nQOJARank : 0 )+ (nSTWRank ? nSTWRank : 0 )+ (nWRRank ? nWRRank : 0) + (nTWRank ? nTWRank : 0 )+ (nPTRank ? nPTRank : 0 )+ (nATTRank ? nATTRank:0);
            $("#ATTTotal").val(nATTTotal);
            var nGrade = 0;
            if (nATTTotal<12) {
                nGrade = 1;
            } else if (nATTTotal < 17){
                nGrade = 2;
            } else if (nATTTotal < 24) {
                nGrade = 3;
            } else if (nATTTotal >=24) {
                nGrade = 4;
            }
            $("input[name=OverallEvaluation][value=" + nGrade + "]").prop('checked', true);
        });
